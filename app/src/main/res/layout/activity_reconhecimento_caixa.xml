<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReconhecimentoCaixaActivity">


    <Button
        android:id="@+id/back_button_box"
        style="@style/MainButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/option_agree_box_text"
        />

   <TextView
       android:id="@+id/center_phrase"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       style="@style/CaixaReconhecidaText"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="200dp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:text="@string/register_text_box"
       />

</androidx.constraintlayout.widget.ConstraintLayout>