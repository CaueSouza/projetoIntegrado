<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAlarmeAtivo">

    <TextView
        android:id="@+id/alarm_aviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alarm"
        style="@style/DespertadorText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/schedule_alarm"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        style="@style/MostraHorarioAlarme"
        android:text="@string/time_alarm"
        app:layout_constraintTop_toBottomOf="@id/alarm_aviso"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:gravity="center_horizontal"
        />


    <LinearLayout
        android:id="@+id/layout_medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/schedule_alarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp"
        >


        <ImageView
            android:id="@+id/capsule_or_liquid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_pills"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_medicine_alarm_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/MostrarNomeRemedioAlarme"
            tools:text="@string/testeremedio"
            android:gravity="center_horizontal"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_quantity_name_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_medicine_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp">

        <ImageView
            android:id="@+id/solid_image_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/ic_number"
            />

        <TextView
            android:id="@+id/name_medicine_alarm_on_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            style="@style/MostrarNomeRemedioAlarme"
            tools:text="@string/testeremedio"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>


    <Button
        android:id="@+id/button_alarm_confirm"
        style="@style/BotaoOkAlarme"
        android:background="@drawable/custom_button_alarm_press"
        android:layout_marginTop="10dp"
        android:text="@string/turn_off"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_quantity_name_2"/>


</androidx.constraintlayout.widget.ConstraintLayout>


